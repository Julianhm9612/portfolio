---
import { t } from 'i18next';
import CardExperience from './CardExperience.astro'
import { getExperiences } from '../services/experiences'

const experiences = getExperiences()
---

<section id="experience" class="flex flex-col justify-center items-center gap-12 min-h-screen">
    <div class="flex flex-col text-center w-full">
        <p class="text-sm text-gray-600">{t('experience.browse')}</p>
        <h1 class="font-bold text-3xl">{t('experience.title')}</h1>
    </div>
    <div class="grid gap-4 max-w-5xl md:grid-cols-2">
        {experiences.map(
            experience => <CardExperience title={experience.title} company={experience.company} description={experience.description} startDate={experience.startDate} endDate={experience.endDate} skills={experience.skills} />
        )}
    </div>
</section>
