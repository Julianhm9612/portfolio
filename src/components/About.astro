---
import { t } from 'i18next';
import Books from './Books.astro'
import Medal from './Medal.astro'
---

<section id="about" class="flex flex-col justify-center items-center gap-12 min-h-screen">
    <div class="flex flex-col text-center w-full">
        <p class="text-sm text-gray-600">{t('about.more')}</p>
        <h1 class="font-bold text-3xl">{t('about.about')}</h1>
    </div>
    <div class="flex flex-col items-center gap-4 max-w-5xl md:gap-12 lg:flex-row">
        <img class="rounded-3xl w-60 md:w-80 lg:w-96" src="me-2.jpeg" alt="Julian Henao Marin" />
        <div class="flex flex-col gap-4 md:gap-12">
            <div class="flex flex-col justify-between gap-4 md:gap-12 sm:flex-row">
                <div class="flex flex-col items-center border border-black rounded-3xl px-14 py-5">
                    <Medal />
                    <h1 class="font-bold text-xl">{t('about.experience')}</h1>
                    <p class="text-sm text-gray-600">{t('about.years')}</p>
                    <p class="text-sm text-gray-600">{t('about.jobTitle')}</p>
                </div>
                <div class="flex flex-col items-center border border-black rounded-3xl px-14 py-5">
                    <Books />
                    <h1 class="font-bold text-xl">{t('about.education')}</h1>
                    <p class="text-sm text-gray-600">{t('about.educationTitle')}</p>
                </div>
            </div>
            <p class="text-justify text-sm text-gray-600 max-w-[573.8px]">
                {t('about.summary')}
            </p>
        </div>
    </div>
</section>
