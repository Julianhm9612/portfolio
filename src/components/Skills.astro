---

import Skill from './Skill.astro'
import { getSkills, getSoftSkills, getCloudSkills } from '../services/skills'

const skills = getSkills()
const softSkills = getSoftSkills()
const cloudSkills = getCloudSkills()
---

<section id="skills" class="flex flex-col justify-center items-center gap-12 min-h-screen">
    <div class="flex flex-col text-center w-full">
        <p class="text-sm text-gray-600">Explore my</p>
        <h1 class="font-bold text-3xl">Skills</h1>
    </div>
    <ul class="flex flex-wrap gap-4 max-w-5xl">
        {softSkills.map(
            skill => <Skill title={skill.title} />
        )}
    </ul>
    <ul class="flex flex-wrap gap-4 max-w-5xl">
        {skills.map(
            skill => <Skill title={skill.title} />
        )}
    </ul>
    <ul class="flex flex-wrap gap-4 max-w-5xl">
        {cloudSkills.map(
            skill => <Skill title={skill.title} />
        )}
    </ul>
</section>
