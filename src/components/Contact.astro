---
import { t } from 'i18next';
import Linkedin from './Linkedin.astro'
---

<section id="contact" class="flex flex-col justify-center items-center gap-12 min-h-screen">
    <div class="flex flex-col text-center w-full">
        <p class="text-sm text-gray-600">{t('contact.touch')}</p>
        <h1 class="font-bold text-3xl">{t('contact.title')}</h1>
    </div>
    <form method="POST" id="form" class="flex flex-col items-center gap-4 max-w-sm">
        <input
            type="hidden"
            name="access_key"
            value="307e97d1-2516-48ea-b0d5-d3bf5e690d28"
        />
        <input type="hidden" name="subject" value="New Submission from Web3Forms">
        <input type="checkbox" name="botcheck" id="" style="display: none;">

        <input type="email" name="email" placeholder={t('contact.form.email')} class="py-3 px-4 block w-full border border-gray-700 text-black rounded-md text-sm focus:border-blue-500 focus:ring-blue-500" required>
        <input type="text" name="name" placeholder={t('contact.form.name')} class="py-3 px-4 block w-full border border-gray-700 text-black rounded-md text-sm focus:border-blue-500 focus:ring-blue-500" required>
        <textarea name="message" placeholder={t('contact.form.message')} class="py-3 px-4 block w-full border border-gray-700 text-black rounded-md text-sm focus:border-blue-500 focus:ring-blue-500" rows="3"></textarea>

        <span class="h-captcha" data-captcha="true"></span>

        <div class="flex justify-between w-full">
            <a href="https://www.linkedin.com/in/julianhm9612" target="_blank" class="flex p-2 border border-black rounded-full text-gray-700 hover:text-black transition-colors" rel="noopener">
                <Linkedin /> Linkedin
            </a>
            <button type="submit" class="bg-gray-700 text-white text-sm rounded-full p-3 hover:bg-black transition-colors px-6 w-min">{t('contact.form.send')}</button>
        </div>
    </form>

    <span id="result" class="p-4"></span>

    <script src="https://web3forms.com/client/script.js" async defer></script>
</section>

<script>
    const form = document.getElementById('form') as HTMLFormElement
    const result = document.getElementById('result') as HTMLElement

    form?.addEventListener('submit', function (e) {
        e.preventDefault()
        const formData = new FormData(form)
        const object = Object.fromEntries(formData)
        const json = JSON.stringify(object)
        result.innerHTML = 'Please wait...'

        fetch('https://api.web3forms.com/submit', {
            method: "POST",
            headers: {
                'Content-Type': 'application/json',
                Accept: 'application/json'
            },
            body: json
        })
            .then(async (response) => {
                let json = await response.json()
                if (response.status == 200) {
                    result.innerHTML = json.message
                } else {
                    result.innerHTML = json.message
                }
            })
            .catch((error) => {
                result.innerHTML = 'Something went wrong!'
            })
            .then(function () {
                form?.reset()
                setTimeout(() => {
                    result.style.display = 'none'
                }, 3000)
            });
    });
</script>
